{
  "name": "financial-sentiment-analysis",
  "version": "1.0.0",
  "description": "Financial Sentiment Analysis ML Dashboard",
  "author": "Financial Analytics",
  "main": "src/js/main.js",
  "scripts": {
    "start": "electron .",
    "flask": "python src/python/main.py",
    "install-deps": "npm install && pip install -r requirements.txt",
    "build": "electron-builder",
    "make": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.example.financial-sentiment-analysis",
    "productName": "Financial Sentiment Analysis",
    "directories": {
      "output": "dist"
    },
    "forceCodeSigning": false,
    "files": [
      "src/**",
      "frontend/**",
      "data/**"
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "chart.js": "^4.4.1"
  },
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  }
}
